{
  "name": "reluem/contao-uikit",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "description": "A contao bundle to integrate the uikit framework.",
  "authors": [
    {
      "name": "Lucas Rech",
      "email": "reluem@icloud.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Reluem\\ContaoUIkitBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Reluem\\ContaoUIkitBundle\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^5.6 || ^7.0",
    "contao/core-bundle": "4.4.*",
    "symfony/framework-bundle": "^3.3",
    "npm-asset/uikit": "~3.0",
    "codefog/contao-haste": "^4.20",
    "felixpfeiffer/subcolumns": "3.1.7"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "doctrine/doctrine-cache-bundle": "^1.3",
    "friendsofphp/php-cs-fixer": "^2.6",
    "leofeyer/optimize-native-functions-fixer": "^1.1",
    "php-http/guzzle6-adapter": "^1.1",
    "php-http/message-factory": "^1.0.2",
    "phpunit/phpunit": "^5.7.26",
    "symfony/phpunit-bridge": "^3.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "extra": {
    "contao-manager-plugin": "Reluem\\ContaoUIkitBundle\\ContaoManager\\Plugin",
    "installer-types": [
      "npm-asset"
    ],
    "installer-paths": {
      "assets/{$name}/": [
        "type:npm-asset"
      ]
    }
  }
}

